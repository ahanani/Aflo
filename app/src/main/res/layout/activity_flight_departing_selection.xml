<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_flight_selection"
    android:columnCount="1"
    android:rowCount="4">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/budgetProgressDF"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:name="com.example.aflo.BudgetProgress"
        tools:layout="@layout/fragment_progress_bar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:text="Select your flights"
        android:textStyle="bold"
        android:textSize="34sp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/dates"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:text="MMM DD, YYYY - MMM DD, YYYY\n"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_marginStart="10dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_column="0"
        android:layout_row="3"
        android:name="com.example.aflo.HotelsFragment"
        tools:layout="@layout/activity_hotels"
        android:layout_marginBottom="80dp">
    </androidx.fragment.app.FragmentContainerView>

</GridLayout>