<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OriginSelectionFragment">

    <TextView
        android:id="@+id/originSelectionPrompt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364"
        android:layout_width="252dp"
        android:layout_height="80dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/where_is_your_vacation_origin"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <View
        android:id="@+id/view"
        android:layout_width="320dp"
        android:layout_height="4dp"
        android:background="@color/aflo_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466" />

    <AutoCompleteTextView
        android:id="@+id/spinner"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:paddingLeft="10dp"
        android:hint="Country"
        android:fontFamily="@font/nunito_bold"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_corner_edittext"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523" />

    <AutoCompleteTextView
        android:id="@+id/spinner2"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:background="@drawable/round_corner_edittext"
        android:paddingLeft="10dp"
        android:fontFamily="@font/nunito_bold"
        android:hint="State/Province"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615" />

    <AutoCompleteTextView
        android:id="@+id/spinner3"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:background="@drawable/round_corner_edittext"
        android:paddingLeft="10dp"
        android:hint="City"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707" />


</androidx.constraintlayout.widget.ConstraintLayout>