<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlightTypeSelection">


    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="2"
        android:background="#2196F3"
        >

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:layout_width="match_parent"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_height="wrap_content"
            android:name="com.example.aflo.BudgetProgress"
            tools:layout="@layout/fragment_progress_bar"

            android:layout_marginTop="20dp"
            />




        <TextView
          android:id="@+id/selectType"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Select your Flight Type"
          android:textSize="36dp"
          android:textColor="#ffffff"

          />

        <Button
            android:id="@+id/economy"
            android:text="Economy                    $"
            android:height="60dp"
            android:backgroundTint="#ffffff"
            android:textColor="#4b4b4b"
            android:onClick="saveFlightTypeToBundle"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/business"
            android:text="Business                  $$"
            android:height="60dp"
            android:backgroundTint="#ffffff"
            android:textColor="#4b4b4b"
            android:onClick="saveFlightTypeToBundle"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/FirstClass"
            android:text="First Class           $$$"
            android:height="60dp"
            android:backgroundTint="#ffffff"
            android:textColor="#4b4b4b"
            android:onClick="saveFlightTypeToBundle"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_gravity="center"/>






    </GridLayout>


</FrameLayout>