<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DestinationSelectionFragment">

    <TextView
        android:id="@+id/destinationSelectionPrompt"
        android:layout_width="337dp"
        android:layout_height="79dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/where_is_your_vacation_destination"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.378" />

        <View
            android:id="@+id/view"
            android:layout_width="340dp"
            android:layout_height="4dp"
            android:background="@color/aflo_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.406"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.466" />

    <AutoCompleteTextView
        android:id="@+id/spinner4"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:paddingLeft="10dp"
        android:hint="Country"
        android:fontFamily="@font/nunito_bold"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_corner_edittext"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523" />

    <AutoCompleteTextView
        android:id="@+id/spinner5"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:background="@drawable/round_corner_edittext"
        android:paddingLeft="10dp"
        android:fontFamily="@font/nunito_bold"
        android:hint="State/Province (Optional)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615" />

    <AutoCompleteTextView
        android:id="@+id/spinner6"
        android:layout_width="332dp"
        android:layout_height="55dp"
        android:background="@drawable/round_corner_edittext"
        android:paddingLeft="10dp"
        android:hint="City"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707" />


    </androidx.constraintlayout.widget.ConstraintLayout>

