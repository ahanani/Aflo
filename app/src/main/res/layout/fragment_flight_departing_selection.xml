    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flight_departing_selection">

    <!-- TODO: Update blank fragment layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="1"
        >

    <!-- Option 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstChoice"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/roundstyle"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:contentDescription="flight logo"
            android:layout_marginLeft="10dp"
            android:maxWidth="100dp"
            android:maxHeight="280dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_airplanemode_active_24"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/flight_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="6:00AM - 12:00PM"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/stops"
            android:layout_width="83dp"
            android:layout_height="16dp"
            android:width="280dp"
            android:paddingHorizontal="10dp"
            android:text="Nonstop"
            android:textSize="12sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/flight_duration"
            app:layout_constraintVertical_bias="0.714" />

        <TextView
            android:id="@+id/see_details"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:text="See Details"
            android:textColor="#FF9900"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.883"
            app:layout_constraintStart_toEndOf="@+id/stops" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="16dp"
            android:text="$250"
            app:layout_constraintBottom_toTopOf="@+id/see_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.839"
            app:layout_constraintStart_toEndOf="@+id/flight_duration"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


